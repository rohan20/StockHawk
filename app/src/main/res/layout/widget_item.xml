<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:gravity="center_vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/widget_item_symbol"
        style="@style/StockSymbolTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:text="GOOG" />

    <TextView
        android:id="@+id/widget_item_price_change"
        style="@style/PercentChangeTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/widget_item_symbol"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@id/widget_item_symbol"
        android:gravity="center"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        tools:text="0.56%" />

    <TextView
        android:id="@+id/widget_item_price"
        style="@style/BidPriceTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/widget_item_symbol"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@id/widget_item_symbol"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/widget_item_price_change"
        android:gravity="center"
        tools:text="1000.00" />

</RelativeLayout>
